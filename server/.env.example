# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/business_vision_ai

# Redis/Event Bus Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Subscription Limits
FREE_TIER_REQUESTS_PER_MONTH=10
PREMIUM_TIER_REQUESTS_PER_MONTH=1000
ENTERPRISE_TIER_REQUESTS_PER_MONTH=10000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Email Configuration (Optional)
EMAIL_SERVICE=gmail
EMAIL_USER=
EMAIL_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,csv,xlsx

# Agent Configuration
BUSINESS_STRATEGY_AGENT_ENABLED=true
ASSET_CURATOR_AGENT_ENABLED=true
USAGE_GUARDIAN_AGENT_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Monitoring & Analytics
ENABLE_ANALYTICS=false
ANALYTICS_API_KEY=

# Development Configuration
ENABLE_REQUEST_LOGGING=true

# API Gateway Configuration
API_GATEWAY_TIMEOUT=30000
API_GATEWAY_RETRY_ATTEMPTS=3

# Microservices URLs (for future scaling)
AUTH_SERVICE_URL=http://localhost:3001
BUSINESS_STRATEGY_SERVICE_URL=http://localhost:3002
ASSET_CURATOR_SERVICE_URL=http://localhost:3003
USAGE_GUARDIAN_SERVICE_URL=http://localhost:3004
