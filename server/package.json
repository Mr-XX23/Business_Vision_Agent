{
  "name": "business-vision-ai-platform",
  "version": "1.0.0",
  "description": "Microservices-based Agentic AI Platform for Business Strategy Generation",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker build -f docker/Dockerfile -t business-vision-ai .",
    "docker:run": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:stop": "docker-compose -f docker/docker-compose.yml down",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.js\"",
    "logs": "tail -f logs/app.log",
    "health": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "ai",
    "microservices",
    "business-strategy",
    "nodejs",
    "express",
    "mongodb",
    "redis",
    "openai"
  ],
  "author": "Business Vision AI Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "redis": "^4.6.7",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "compression": "^1.7.4",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.1",
    "axios": "^1.5.0",
    "joi": "^17.9.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "openai": "^4.0.1",
    "uuid": "^9.0.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "prettier": "^3.0.1",
    "@types/node": "^20.5.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/business-vision-ai-platform.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/business-vision-ai-platform/issues"
  },
  "homepage": "https://github.com/your-org/business-vision-ai-platform#readme"
}
